<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
<div class="container" ng-app="myApp" ng-controller="myController">
    <h1>Stock Information</h1>
    <hr>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add</button>
    <div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Index</th>
                    <th>
                        ProductName
                    </th>
                    <th>Quantity</th>
                    <th>Edit</th>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="stock in stocks">
                    <td>{{$index+1}}</td>
                    <td>{{stock.ProductName}}</td>
                    <td>{{stock.Quantiti}}</td>
                    <td><button type="button" class="btn btn-info" data-toggle="modal" data-target="#editModal" ng-click="clickedStock(stock)">Edit</button></td>
                    <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" ng-click="clickedStock(stock)">Delete</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Add Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Stock</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" id="add">
                        <div class="form-group">
                            <label class="control-label col-sm-4">Product Name:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="newStock.ProductName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Product Quantity:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="newStock.Quantiti">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary" data-dismiss="modal" ng-click="SaveStock(newStock)">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="editModal" role="dialog">
        <div class="modal-dialog">
            <!--Edit Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Stock Update</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-4">Stock Id:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="clickedStock.StockId">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Product Name:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="clickedStock.ProductName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Stock Quantity:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="clickedStock.Quantiti">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary" ng-click="UpdateStock()" data-dismiss="modal">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="deleteModal" role="dialog">
        <div class="modal-dialog">
            <!--Delete Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Stock Delete</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <strong style="color:red">Are you sure that you want to delete {{clickedStock.ProductName}}'s information permanently??</strong>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="DeleteStock()">Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Js/AngularJS/angular.js"></script>
<script src="~/Js/AngularJS/angular-route.js"></script>
<script src="~/Js/AngularJS/Module.js"></script>
<script src="~/Js/AngularJS/Service.js"></script>
<script src="~/Js/AngularJS/Controller.js"></script>
<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.js"></script>